<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:shadowColor="#000"
    android:shadowDx="0"
    android:shadowDy="30"
    android:shadowRadius="50"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp">

    <androidx.cardview.widget.CardView
        card_view:cardCornerRadius="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_layout"
            android:layout_margin="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/account_no"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="10dp"
                android:text="Account No: xxxxxxxxxxxxx"
                android:textSize="14dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@android:color/black"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/user_name"
                android:drawableLeft="@drawable/username"
                android:drawablePadding="5dp"
                android:layout_below="@+id/account_no"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:text="Food Name"
                android:textSize="14dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@android:color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/user_email"
                android:drawableLeft="@drawable/user_email"
                android:drawablePadding="5dp"
                android:layout_below="@id/user_name"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                android:text="asad84944@gmail.com"
                android:textSize="14dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@android:color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/total_amount"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/user_email"
                android:maxLines="1"
                android:text="Total Amount: $0"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@android:color/darker_gray"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>